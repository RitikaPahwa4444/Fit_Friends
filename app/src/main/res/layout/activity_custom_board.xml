<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/zoom_plate"
    tools:context=".CustomBoard">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Enter Dimensions"
        android:textSize="34sp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hi"
        android:layout_marginTop="50dp"
        android:id="@+id/heading"
        android:padding="10dp"
        android:textStyle="bold"
        />
    <EditText android:layout_width="200dp"
        android:layout_height="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintHorizontal_bias="0.48"
        android:id="@+id/hi"
        android:hint="Enter Height"
        android:textColor="@color/black"

        />
    <EditText android:layout_width="200dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/hi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        android:layout_marginTop="16dp"
        android:id="@+id/wi"
        android:hint="Enter Width"
        />
    <EditText android:layout_width="200dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/wi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        android:layout_marginTop="16dp"
        android:id="@+id/mi"
        android:hint="Enter number of Mines"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:background="@android:color/holo_purple"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/heading"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/heading" />




</androidx.constraintlayout.widget.ConstraintLayout>